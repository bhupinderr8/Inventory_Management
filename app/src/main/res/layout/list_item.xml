<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAlignment="center">
    <com.google.android.material.card.MaterialCardView
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/primartTextLightColor">
        <LinearLayout
            android:id="@+id/list_item_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@drawable/common_google_signin_btn_text_dark"
                android:id="@+id/activity_image_view"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="2" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/activity_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingStart="16dp"
                    android:text="bottle"
                    android:textAlignment="viewStart"
                    android:textSize="36dp" />

                <TextView
                    android:id="@+id/activity_price"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="bottom"
                    android:paddingStart="16dp"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="18dp"
                    tools:text="100yen" />

            </LinearLayout>

            <TextView
                android:id="@+id/activity_qty"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/roboto_regular"
                android:gravity="end|center_vertical"
                android:text=""
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="48sp"
                tools:text="3" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout >