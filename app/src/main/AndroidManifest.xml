<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.inventory">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Register.RegisterViewImpl"></activity>
        <activity android:name=".AddBuyer.BuyerDetailsActivity" />
        <activity android:name=".Order.ConfirmActivity" />
        <activity android:name=".Order.SelectActivity" />
        <activity android:name=".Home.HomeActivity" />
        <!-- suppress AndroidDomInspection -->
        <activity
            android:name=".Login.LoginViewImpl"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ItemsList.ItemsListViewImpl" />
        <activity android:name=".NewItem.DetailsActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.inventory.ItemsList.ItemsListViewImpl" />
        </activity>
    </application>

</manifest>